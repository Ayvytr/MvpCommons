<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <RelativeLayout
        android:id="@+id/ll_common_widget_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_common_search_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/iv_common_search_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/iv_common_search_icon"
            android:layout_alignLeft="@+id/iv_common_search_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-12dp"
            android:layout_marginLeft="-12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_common_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/iv_common_search_icon"
            android:background="@null"
            android:hint="搜索"
            android:textSize="12sp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_common_search_cancel"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:text="取消"
        android:visibility="gone"/>

</RelativeLayout>