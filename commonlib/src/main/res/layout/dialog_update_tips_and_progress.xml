<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="186dp">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="185dp">

            <TextView
                android:id="@+id/tv_update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:text="YouBank V3.0"/>

            <TextView
                android:id="@+id/tv_update_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="12dp"
                android:text="1.全新配色更改，页面优化设计，权限ui设计
2.全新配色更改，页面优化设计，权限ui设计
3.全新配色更改，页面优化设计，权限ui设计"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarThumbVertical="@android:color/white"
                android:textSize="14sp" />


            <ProgressBar
                android:id="@+id/pb_update_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progress="0"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btn_update_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/common_download_not_updated_yet"
                    android:gravity="center"
                    android:textSize="15sp"
                    />


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/btn_update_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/common_download_update_immediately"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>